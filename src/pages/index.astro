---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle="Home";
import { styles } from "../styles/tailwindStyle";
import Navbar from "../components/Navbar.astro";
import { Icon } from "astro-icon";
import Background from "../components/Background.astro";
---

<BaseLayout pageTitle={pageTitle}>
    <div class="h-screen w-screen flex flex-col relative overflow-hidden">
		<Background/>
		<Navbar pageTitle={pageTitle}/>
		<div class=`${styles.mainPadding} grow flex items-center` >
			<div class="grow flex flex-col gap-20">
				<div class="gap-2 flex flex-col">
					<div class=`${styles.xl4Text} font-semibold text-text`>Hi, my name is <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent">Bach Tran</span></div>
					<div class=`${styles.xl2Text} font-medium text-text`>I'm <span id="typed">a</span></div>
				</div>
				<div class="flex flex-col gap-6">
					<div class="flex flex-col md:flex-row md:gap-2">
						<div class=`text-text ${styles.lgText}`>Want to connect?</div>
						<div class=`text-text ${styles.lgText}`>Please contact me using the following</div>
					</div>
					<div class="flex gap-4 md:gap-8 items-center">
						<a href="https://github.com/Theskrtnerd"  class="hover:-translate-y-1 ease-in-out duration-100 h-12 w-12 text-sec-500 hover:text-secondary">
							<Icon name="bi:linkedin" class="rounded-lg"/>
						</a>
						<a href="https://www.linkedin.com/in/bach-tran-xineohperif/"  class="hover:-translate-y-1 ease-in-out duration-100 h-12 w-12 text-sec-500 hover:text-secondary" >
							<Icon name="fa:github-square" />
						</a>
						<a href="/resume.pdf" class=`px-8 md:px-16 justify-center border-2 border-sec-300 hover:-translate-y-1 ease-in-out duration-100 bg-primary rounded-xl py-4 flex items-center ${styles.lgText}`>
							<div>My Resume</div>
						</a>
					</div>
				</div>
			</div>
			<div class="hidden lg:block w-1/3 h-[95%]">
				<spline-viewer url="https://prod.spline.design/rrxJXcQFcyNpCUSD/scene.splinecode"></spline-viewer>
			</div>
		</div>
	</div>
	<script type="module" src="https://unpkg.com/@splinetool/viewer@0.9.523/build/spline-viewer.js"></script>
	<script>
    	import "../scripts/typed.js"
		import "../scripts/removeLogo.js"
		// import "../scripts/3d.js"
	</script>
</BaseLayout>
